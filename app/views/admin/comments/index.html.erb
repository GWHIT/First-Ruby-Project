<%if current_user.try(:admin?) || current_user.email == "admin@admin.com"%>
  <h1>Listing Comments</h1>


  <table>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
      <th colspan="2"></th>
    </tr>



  <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
        <td>
   	   <%= link_to 'Destroy Comment', [:admin, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        <td><%= link_to 'Show', article_comment_path(comment.article, comment) %></td>

        </td>
      </tr>
    <% end %>
  </table
  
  <%else%>
    <h1>  Access not allowed </h1>
<%end%>



<%= link_to 'Back', articles_path %>
